<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:layout_marginTop="30dp">

    <!-- Header vá»›i gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/header_gradient">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ° Lucky Wheels"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/wheel_header_text"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="âœ¨ Choose a wheel to spin and win amazing prizes! âœ¨"
            android:textSize="16sp"
            android:textColor="@color/wheel_header_text"
            android:gravity="center"
            android:alpha="0.9" />

    </LinearLayout>

    <!-- Wheels List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wheels_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:clipToPadding="false" />

    <!-- Empty View -->
    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¡"
            android:textSize="64sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No lucky wheels available"
            android:textSize="18sp"
            android:textColor="@color/text_secondary"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Check back later for new wheels!"
            android:textSize="14sp"
            android:textColor="@color/text_hint"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>