<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/dialog_background">

    <TextView
        android:id="@+id/dialog_order_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order #123"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/dialog_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pending"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/status_pending"
        android:background="@drawable/status_background"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/dialog_order_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ordered: 2025-07-16 00:12:21"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/dialog_order_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address: 123 Main St"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Items:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <RecyclerView
        android:id="@+id/dialog_order_items_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:maxHeight="300dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/dialog_order_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: $45.99"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:gravity="end"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/dialog_close_button"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close" />

</LinearLayout>